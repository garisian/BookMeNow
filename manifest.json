{
    "manifest_version": 2,
    "name": "BookMeNow",
    "description": "Create multiple bookmarks and have it all sent to you by email",
    "version": "0.2",
    "background": {
        "scripts": ["js/event.js"],
        "persistent": false
    },
    "browser_action": 
    {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html"
    },
        "permissions": [
        "tabs", 
        "http://*/*", 
        "https://*/*",
        "http://localhost/*"
    ]
}